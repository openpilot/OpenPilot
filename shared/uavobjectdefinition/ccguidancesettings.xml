<xml>
    <object name="CCGuidanceSettings" singleinstance="true" settings="true">
        <description>Settings for the @ref CCGuidanceModule</description>
		<field name="Yaw" units="deg" type="float" elementnames="1" defaultvalue="0"/>
        <field name="Pitch" units="deg" type="float" elementnames="Climb,Sink" defaultvalue="15,-5"/>
        <field name="Roll" units="deg" type="float" elementnames="Kp,Max,Neutral" defaultvalue="2,35,0"/>
        <field name="ReturnTobaseAltitudeOffset" units="meter" type="int16" elements="1" defaultvalue="75"/>
		<field name="RadiusBase" units="meter" type="int16" elementnames="1" defaultvalue="25"/>
        <field name="TimesRotateToCourse" units="msec" type="int16" elements="1" defaultvalue="3000"/>
        <field name="MovingAverageMedianYaw" units="" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="FALSE"/>
		<field name="GroundSpeedCalcCorrectHeadMin" units="m/sec" type="uint8" elementnames="1" defaultvalue="2"/>
		<field name="GroundSpeedMax" units="m/sec" type="uint8" elementnames="1" defaultvalue="15"/>
		<field name="FaileSaveRTB" units="" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="FALSE"/>
		<field name="TrottleAutoSet" units="" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="FALSE"/>
		<field name="TrottleMin" units="%" type="float" elementnames="1" defaultvalue="0"/>
		<field name="TrottleMax" units="%" type="float" elementnames="1" defaultvalue="1"/>
		<field name="HomeLocationSet" units="" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="FALSE"/>
        <field name="HomeLocationLatitude" units="deg * 10e6" type="int32" elements="1" defaultvalue="0"/>
        <field name="HomeLocationLongitude" units="deg * 10e6" type="int32" elements="1" defaultvalue="0"/>
        <field name="HomeLocationAltitude" units="m over geoid" type="float" elements="1" defaultvalue="0"/>
        <field name="UpdatePeriod" units="msec" type="int16" elements="1" defaultvalue="300"/>
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="true" updatemode="onchange" period="0"/>
        <telemetryflight acked="true" updatemode="onchange" period="0"/>
        <logging updatemode="never" period="0"/>
    </object>
</xml>
